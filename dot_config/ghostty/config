# font
font-family = "HackGen Console NF"
font-size = 16

# 選択したテキストを自動的にクリップボードへコピーする
copy-on-select = true

# ターミナル内のプログラムがクリップボードの内容を読み取ることを許可するかどうか
clipboard-read = ask
# ターミナル内のプログラムがクリップボードにデータを書き込むことを許可するか
clipboard-write = allow

# コピー時に末尾の空白（スペースやタブなど）を自動で削除する
# clipboard-write 経由で送信されるデータには影響しない
clipboard-trim-trailing-spaces = true

confirm-close-surface = false

# 最後のタブが閉じられた時にアプリを閉じる
quit-after-last-window-closed = true

# windowサイズを指定
window-height = 40
window-width = 120

# (macの信号機)タイトルバーを表示する
window-decoration = true
