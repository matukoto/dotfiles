{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "github>aquaproj/aqua-renovate-config:file#2.8.1(aqua/.*\\.ya?ml)",
    "github>aquaproj/aqua-renovate-config:aqua-renovate-config#2.8.1(renovate\\.json)",
    "github>aquaproj/aqua-renovate-config:installer-script#2.8.1(scripts/.*\\.sh)"
  ],
  "timezone": "Asia/Tokyo",
  "automerge": false,
  "dependencyDashboard": true,
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchPackageNames": [
        "aquaproj/aqua-registry"
      ],
      "extends": [
        "schedule:earlyMondays"
      ]
    },
    {
      "matchFileNames": [
        "aqua.yaml",
        "renovate.json5"
      ],
      "groupName": "aqua"
    },
    {
      "matchFileNames": [
        "mise/config.toml"
      ],
      "enabledManagers": [
        "mise",
        "npm",
        "go",
        "cargo"
      ],
      "groupName": "mise"
    }
  ]
}
