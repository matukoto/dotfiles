{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "github>aquaproj/aqua-renovate-config:file#2.3.1(aqua/.*\\.ya?ml)"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "every day"
  ],
  "automerge": true,
  "dependencyDashboard": false,
  "packageRules": [
    {
      "matchFileNames": [
        "aqua.yaml",
        "renovate.json"
      ],
      "groupName": "aqua"
    },
    {
      "matchFileNames": [
        "mise/config.toml"
      ],
      "groupName": "mise"
    }
  ]
}
