{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "github>aquaproj/aqua-renovate-config:file#2.4.0(aqua/.*\\.ya?ml)",
    "github>aquaproj/aqua-renovate-config:aqua-renovate-config#2.4.0(renovate\\.json)",
    "github>aquaproj/aqua-renovate-config:installer-script#2.4.0(scripts/.*\\.sh)"
  ],
  "timezone": "Asia/Tokyo",
  "automerge": true,
  "dependencyDashboard": false,
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchFileNames": [
        "aqua.yaml",
        "renovate.json"
      ],
      "matchPackageNames": [
        "aquaproj/aqua-registry",
        "aquaproj/aqua"
      ],
      "groupName": "aqua"
    },
    {
      "matchFileNames": [
        "mise/config.toml"
      ],
      "enabledManagers": [
        "mise"
      ],
      "groupName": "mise"
    }
  ]
}
